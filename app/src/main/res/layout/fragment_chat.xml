<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ChatFragment">

    <TextView
        android:id="@+id/tvmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Messages"
        android:textSize="25sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/etchatsearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/et_shape"
        android:hint="Search username"
        android:paddingStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvmessage" />

    <ImageButton
        android:id="@+id/hearthold"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/tik_tok_logo_33078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etchatsearch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:paddingTop="20dp"
        android:text="Recent Chats"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilePic"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="@dimen/dp_20"
                        app:cardCornerRadius="80dp">

                        <ImageView
                            android:id="@+id/ContactProfile1"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_margin="3dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/men_contact" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_toEndOf="@id/profilePic"
                        android:id="@+id/tvPersonName1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cantora_one"
                        android:gravity="start|center_vertical"
                        android:text="Sam Patil"
                        android:layout_marginStart="10sp"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilePic2"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="@dimen/dp_20"
                        app:cardCornerRadius="80dp">

                        <ImageView
                            android:id="@+id/ContactProfile2"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/women_contact" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvPersonName2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cantora_one"
                        android:gravity="start|center_vertical"
                        android:layout_toEndOf="@id/profilePic2"
                        android:text="Shruti Bhoir"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilePic3"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="@dimen/dp_20"
                        app:cardCornerRadius="80dp">

                        <ImageView
                            android:id="@+id/ContactProfile3"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/women_contact" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvPersonName3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cantora_one"
                        android:gravity="start|center_vertical"
                        android:layout_toEndOf="@id/profilePic3"
                        android:paddingStart="10dp"
                        android:text="Rutuja Kumbhar"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilePic4"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="@dimen/dp_20"
                        app:cardCornerRadius="80dp">

                        <ImageView
                            android:id="@+id/ContactProfile4"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/men_contact" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvPersonName4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cantora_one"
                        android:gravity="start|center_vertical"
                        android:paddingStart="10dp"
                        android:layout_toEndOf="@id/profilePic4"
                        android:text="Mayur Patil"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>